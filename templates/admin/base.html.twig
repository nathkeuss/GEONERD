<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ asset('assets/img_statics/logo_site.ico') }}" type="image/ico">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/admin/main.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-light d-flex flex-column min-vh-100">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('dashboard_admin') }}">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_continent_list') }}">Créer du contenu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="{{ path('logout_admin') }}">Déconnexion</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center" role="alert">
            <h4 class="mb-0">{{ message }}</h4>
        </div>
    {% endfor %}
</div>

<main class="container my-4">
    {% block body %}{% endblock %}
</main>

<footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">Admin - {{ app.user.username }}</p>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
