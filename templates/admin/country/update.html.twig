{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le pays {{ country.name }}{% endblock %}

{% block stylesheets %}

{% endblock %}


{% block body %}

    <main class="container py-5">
        <h1 class="text-center mb-4">Modifier le pays</h1>
        <div class="form-container mx-auto">

            <div class="container my-4">
                <div class="text-center">
                    <p class="mb-2 fs-3 fw-bold">Drapeau actuel :</p>
                    <div class="d-flex justify-content-center">
                        <img src="{{ asset('uploads/country/flags/' ~ currentFlag) }}"
                             alt="Drapeau du pays {{ country.name }}"
                             class="img-fluid border rounded shadow"
                             style="max-width: 300px;">
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="mb-2 fs-3 fw-bold">Bannière actuelle :</p>
                    <div class="d-flex justify-content-center">
                        <img src="{{ asset('uploads/country/banners/' ~ currentBanner) }}"
                             alt="Bannière du pays {{ country.name }}"
                             class="img-fluid border rounded shadow"
                             style="max-width: 100%; height: auto;">
                    </div>
                </div>
            </div>


            {{ form_start(formCountryView) }}

            <div class="mb-3">
                {{ form_label(formCountryView.name) }}
                {{ form_widget(formCountryView.name) }}
                {{ form_errors(formCountryView.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(formCountryView.flag) }}
                {{ form_widget(formCountryView.flag) }}
                {{ form_errors(formCountryView.flag) }}
            </div>

            <div class="mb-3">
                {{ form_label(formCountryView.banner) }}
                {{ form_widget(formCountryView.banner) }}
                {{ form_errors(formCountryView.banner) }}
            </div>

            <div class="text-center">
                {{ form_widget(formCountryView.submit) }}
            </div>

            {{ form_end(formCountryView) }}

        </div>
    </main>

{% endblock %}
