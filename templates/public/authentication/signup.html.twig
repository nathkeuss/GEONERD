{% extends 'public/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('assets/public/css/authentication/signup.css') }}">

{% endblock %}


{% block body %}

    <main class="container-fluid d-flex justify-content-center align-items-center flex-grow-1">


        {{ form_start(formSignUpView, {'attr': {'class': 'form-inscription m-auto col-10 col-lg-6 mt-5 mb-5'}}) }}

        <div class="text-center pt-4">
            <img src="{{ asset('assets/img/authentication/utilisateur.png') }}"
                 alt="Image d'un bonhomme connexion">
        </div>

        <h1 class="form-h1-inscription text-center mt-4">Se créer un compte</h1>

        <div class="w-75 m-auto mt-4">
            {{ form_label(formSignUpView.email, 'Email', {'label_attr': {'class': 'label-inscription form-label d-block text-start'}}) }}
            {{ form_widget(formSignUpView.email, {'attr': {'class': 'input-inscription p-3 w-100', 'placeholder': 'Entrez votre email'}}) }}
            <div class="error">{{ form_errors(formSignUpView.email) }}</div>
        </div>

        <div class="w-75 m-auto mt-4">
            {{ form_label(formSignUpView.username, 'Pseudonyme', {'label_attr': {'class': 'label-inscription form-label d-block text-start'}}) }}
            {{ form_widget(formSignUpView.username, {'attr': {'class': 'input-inscription p-3 w-100', 'placeholder': 'Votre pseudo'}}) }}
            <div class="error">{{ form_errors(formSignUpView.username) }}</div>
        </div>

        <div class="w-75 m-auto mt-4">
            {{ form_label(formSignUpView.password, 'Mot de passe', {'label_attr': {'class': 'label-inscription form-label d-block text-start'}}) }}
            {{ form_widget(formSignUpView.password, {'attr': {'class': 'input-inscription p-3 w-100', 'placeholder': 'au moins 8 caractères, une majuscule, un chiffre et un caractère spécial'}}) }}
            <div class="error">{{ form_errors(formSignUpView.password) }}</div>
        </div>


        {{ form_widget(formSignUpView.submit, {'attr': {'class': 'button-inscription d-block m-auto mt-5 p-1'}, 'label': 'Créer un compte'}) }}

        <div class="text-center mt-4 pb-4">
            <span class="span-to-connection">Déjà un compte ? <a
                        href="{{ path('login_user') }}">Se connecter</a></span>
        </div>

        {{ form_end(formSignUpView) }}


    </main>

{% endblock %}