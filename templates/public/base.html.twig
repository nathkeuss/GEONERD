<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description"
          content="Site pour apprendre la géographie et principalement pour le jeu geoguessr. Contient multiples tutoriels et un forum.">
    <meta name="keywords" content="geoguessr, fr, français, apprendre geoguessr">
    <meta name="author" content="Nathan JULIO - GEONERD">
    <link rel="icon" href="{{ asset('assets/img/base/favicon.svg') }}" type="image/svg+xml">
    <title>{% block title %}Accueil GEONERD{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/public/css/base.css') }}">


    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-GDYM5YJ4T7"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-GDYM5YJ4T7');
    </script>
    {% block stylesheets %}
    {% endblock %}

</head>

<body class="d-flex flex-column">

<header>
    <nav class="px-3 py-3 px-lg-5 py-lg-4">
        <ul class="d-flex align-items-center">
            <li>
                <a class="nav-img-logo d-block" href="{{ path('home') }}">
                    <img class="img-fluid w-100 h-100" src="{{ asset('assets/img/base/logo_site.png') }}"
                         alt="Logo du site GEONERD, une planète avec des yeux et un doigt levé en mode 'actually' ">
                </a>
            </li>
            <li class="d-none d-lg-block">
                <a class="nav-a-text" href="{{ path('home') }}">ACCUEIL</a>
            </li>

            <li class="d-none d-lg-block ms-4">
                <a class="nav-a-text d-block" href="{{ path('country_list') }}">TUTO</a>
            </li>
            <li class="d-none d-lg-block ms-4">
                <a class="nav-a-text d-block" href="{{ path('topic_list') }}">FORUM</a>
            </li>

            <ul class="ms-auto d-lg-none" id="mobile-burger">
                <li class="hamb"></li>
                <li class="hamb"></li>
                <li class="hamb"></li>
            </ul>

            {% if app.user %}
                <li class="ms-auto d-flex flex-column align-items-center">
                    <div class="nav-a-connection d-flex align-items-center text-decoration-none" id="profile-menu">
                        <div class="div-img-profile me-3">
                            <img src="{{ profile_picture(app.user) }}"
                                 alt="Image de profil de {{ app.user.username }}"
                                 class="img-fluid rounded-circle w-100 h-100">
                        </div>
                        <span class="user-username d-none d-lg-block">{{ app.user.username }}</span>
                    </div>
                    <div class="custom-dropdown position-absolute" id="profile-dropdown">
                        <a class="custom-dropdown-item d-flex mb-2"
                           href="{{ path('user_profile_show', {'id': app.user.id}) }}">Mon compte</a>
                        <hr style="color: white">
                        <a class="custom-dropdown-item" href="{{ path('logout_user') }}">Déconnexion</a>
                    </div>
                </li>
            {% else %}
                <li class="ms-auto">
                    <a class="nav-a-connection d-flex align-items-center text-decoration-none text-light"
                       href="{{ path('login_user') }}">
                        <img class="d-block" src="{{ asset('assets/img/base/utilisateur.png') }}"
                             alt="Icône d'un bonhomme de connexion">
                        <span class="d-none d-lg-block nav-a-connection">Connexion</span>
                    </a>
                </li>
            {% endif %}
        </ul>
        <!-- Menu mobile slide -->
        <div id="mobile-menu" class="w-100 m-auto mobile-slide-menu d-lg-none">
            <a href="{{ path('country_list') }}">TUTO</a>
            <a href="{{ path('topic_list') }}">FORUM</a>
        </div>

    </nav>
</header>

{% for message in app.flashes('danger') %}
    <div class="alert alert-danger text-center mt-4 mb-4 w-100" role="alert">
        <h4 class="mb-0">{{ message }}</h4>
    </div>
{% endfor %}


{% block body %}{% endblock %}


<footer>

    <nav>
        <ul class="d-flex align-items-center m-0">
            <li class="footer-li"><a class="footer-a d-block" href="#top">GEONERD</a></li>
            <li class="footer-li offset-6 offset-lg-8"><a class="footer-a d-block" href="https://discord.gg/fmeKjGsqKZ"
                                                          target="_blank"><img class="w-100 h-100"
                                                                               src="{{ asset('assets/img/base/logo_discord.svg') }}"
                                                                               alt="Lien qui dirige vers le discord du site"></a>
            </li>
            <li class="footer-li"><a class="footer-a d-block" href="https://www.youtube.com/@keuss" target="_blank"><img
                            class="w-100 h-100" src="{{ asset('assets/img/base/logo_youtube.png') }}"
                            alt="Lien qui dirige vers le Youtube du créateur"></a></li>
        </ul>
    </nav>

</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('assets/public/js/base/script.js') }}"></script>


{% block javascripts %}
{% endblock %}
</body>
</html>